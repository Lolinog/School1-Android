<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_activated="false">
                <shape
                    android:shape="oval"
                    android:thickness="10dp">
                    <solid android:color="@color/orange_500" />
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/green_500" />
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:bottom="@dimen/circle_subject_private_stroke_thickness"
        android:left="@dimen/circle_subject_private_stroke_thickness"
        android:right="@dimen/circle_subject_private_stroke_thickness"
        android:top="@dimen/circle_subject_private_stroke_thickness">
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="oval">
                    <stroke
                        android:width="@dimen/circle_subject_private_stroke_thickness"
                        android:color="@android:color/white" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>