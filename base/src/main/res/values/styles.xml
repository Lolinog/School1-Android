<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Drawer" />

    <style name="AppTheme.NoActionBar.Signin">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="NavigationHeader" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/tertiaryWhite</item>
        <item name="colorControlNormal">@color/primaryWhite</item>
        <item name="colorControlActivated">@color/primaryWhite</item>
        <item name="colorControlHighlight">@color/primaryWhite</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ColorButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryWhite</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.EditText" />

    <style name="AppTheme.TitleText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.TextDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.SigninIcon">
        <item name="android:layout_marginTop">@dimen/signin_icon_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/signin_icon_vertical_margin</item>
    </style>
</resources>